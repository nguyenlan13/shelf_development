<h3><div>Title: <%=h @book.title %>
<br/>
Author: <a href="/authors/<%= @book.author.id %>"><%=h @book.author.name %></a>
<br/>
Year: <%= @book.year %>
<br/>
Stars: <%= @avg_rating %>
</div></h3>
<br/>
<br/>
<%= erb :'rating/_ratings', locals: {ratable: @book, ratable_type: "books"} %>
<br/>





<br/>
<div>
  <h3>Enlightnening Quotes:</h3>

  <% @fave_quotes.sort_by{|fave_quote| fave_quote[:timestamps]}.each do |fave_quote| %>
  <div>
     <%=h fave_quote.quote %>
    <h6><%= fave_quote.created_at %></h6>
    <br/>
  </div>
  <% end %>
  <br/>
</div>
<div>
<%= erb :'fave_quote/_fave_quote', locals: {quotable: @book, quotable_type: "books"}%>
</div>
<br/>




<br/>
<div>
  <h3>Comments:</h3>

  <% @comments.sort_by{|comment| comment[:timestamps]}.each do |comment| %>
  <div>
     <%=h comment.user.name %>: <%=h comment.content %>
    <h6><%= comment.created_at %></h6>
    <br/>
  </div>
  <% end %>
  <br/>
</div>
<div>
  <%= erb :'comment/_comments', locals: {commentable: @book, commentable_type: @commentable_type}%>
</div>
